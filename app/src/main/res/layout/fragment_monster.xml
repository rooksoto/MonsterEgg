<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_monster_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchment_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="7">

        <ImageView
            android:id="@+id/iv_monster_pic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_atk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/roundbutton"
                android:text="ATK:"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_margin="2dp"
                android:enabled="false"
                android:clickable="false"/>

            <Button
                android:id="@+id/btn_hp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/roundbutton"
                android:text="HP:"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_margin="2dp"
                android:enabled="false"
                android:clickable="false"/>

            <Button
                android:id="@+id/btn_size"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/roundbutton"
                android:text="Size"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_margin="2dp"
                android:enabled="false"
                android:clickable="false"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_monster_stats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/parchment"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:weightSum="13">

        <TextView
            android:id="@+id/tv_monster_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="Monster Name"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv_monster_familiar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="Familiar: Young White Dragon"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_monster_rarity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="Rarity: Normal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_monster_ability_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="Ability: First Ability"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_monster_ability_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="Ability: Second Ability"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>