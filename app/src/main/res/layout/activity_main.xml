<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/parchment_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.rafaelsoto.monsteregg.view.MainActivity"
    android:orientation="vertical"
    android:weightSum="2">

    <FrameLayout
        android:id="@+id/fl_recycle_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/iv_monster_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rv_monster_recycler"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->

        </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_monster_stats"
        android:background="@drawable/parchment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:weightSum="12">

        <TextView
            android:id="@+id/tv_monster_name"
            android:text="Monster Name"
            android:padding="4dp"
            android:fontFamily="casual"
            android:textSize="44sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|top"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/tv_monster_type"
            android:text="Type: Undead"
            android:padding="4dp"
            android:fontFamily="casual"
            android:textSize="26sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|top"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/tv_monster_rarity"
            android:text="Rarity: Normal"
            android:padding="4dp"
            android:fontFamily="casual"
            android:textSize="26sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|top"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/tv_monster_likes"
            android:text="Likes: Eating Children"
            android:padding="4dp"
            android:fontFamily="casual"
            android:textSize="26sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|top"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/tv_monster_weakness"
            android:text="Weakness: Kittens"
            android:padding="4dp"
            android:fontFamily="casual"
            android:textSize="26sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|top"
            android:layout_weight="2"/>

0
    </LinearLayout>

</LinearLayout>
